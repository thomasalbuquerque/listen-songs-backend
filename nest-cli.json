{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "**/*.pug" },
      { "include": "common/i18n/locales/**/*", "watchAssets": true }
    ],
    "plugins": [{ "name": "@nestjs/swagger" }]
  }
}
